<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/characterFragment">

    <fragment
        android:id="@+id/characterFragment"
        android:name="com.example.marvelapp30.feature_character.presentation.CharacterFragment"
        android:label="Character"
        tools:layout="@layout/fragment_character">
        <action
            android:id="@+id/goToDetail"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/eventFragment"
        android:name="com.example.marvelapp30.feature_event.presentation.EventFragment"
        android:label="Event"
        tools:layout="@layout/fragment_event" />

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.marvelapp30.feature_character_details.presentation.CharacterDetailFragment"
        android:label="Character Details"
        tools:layout="@layout/fragment_character_detail" />
</navigation>